<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  implements="com.xazc.interfaces.IInit"
		  xmlns:gd11x5="com.xazc.module.gd11x5.*"
		  xmlns:bettings="com.xazc.components.bettings.*"
		  creationComplete="group1_creationCompleteHandler(event)" xmlns:jx11x5="com.xazc.module.jx11x5.*" xmlns:klsf="com.xazc.module.klsf.*">
	<fx:Script>
		<![CDATA[
			import com.xazc.components.bettings.AlertMsg;
			import com.xazc.event.CustomEvent;
			
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			
			import spark.components.ToggleButton;
			//玩法提示语数量
			[Bindable]
			public var num:int = 0;
			//玩法提示语
			[Bindable]
			public var tips:String = "";
			
			private var oneArray:Array = new Array();
			private var twoArray:Array = new Array();
			private var threeArray:Array = new Array();
			private var fourArray:Array = new Array();
			private var fiveArray:Array = new Array();
			private var sixArray:Array = new Array();
			private var sevenArray:Array = new Array();
			private var eightArray:Array = new Array();
			
			//发送第一位事件的变量
			public static const GET_ONE_NUMBERS:String = "one_daxiaodanshuang_numbers";
			//发送第二位事件的变量
			public static const GET_TWO_NUMBERS:String = "two_daxiaodanshuang_numbers";
			//发送第三位事件的变量
			public static const GET_THREE_NUMBERS:String = "three_daxiaodanshuang_numbers";
			//发送第四位事件的变量
			public static const GET_FOUR_NUMBERS:String = "four_daxiaodanshuang_numbers";
			//发送第五位事件的变量
			public static const GET_FIVE_NUMBERS:String = "five_daxiaodanshuang_numbers";
			//发送第六位事件的变量
			public static const GET_SIX_NUMBERS:String = "six_daxiaodanshuang_numbers";
			//发送第七位事件的变量
			public static const GET_SEVEN_NUMBERS:String = "seven_daxiaodanshuang_numbers";
			//发送第八位事件的变量
			public static const GET_EIGHT_NUMBERS:String = "eight_daxiaodanshuang_numbers";
			/**
			 * 初始化 
			 */
			public function init():void
			{
				one_position.init();
				two_position.init();
				three_position.init();
				four_position.init();
				five_position.init();
				six_position.init();
				seven_position.init();
				eight_position.init();
				
				oneArray = new Array();
				twoArray = new Array();
				threeArray = new Array();
				fourArray = new Array();
				fiveArray = new Array();
				sixArray = new Array();
				sevenArray = new Array();
				eightArray = new Array();
			}
			/**
			 * 组件初始化完毕
			 */
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				one_position.addEventListener(klsf_NumberSelector_DaXiaoDanShuang.NUMBER_CLICK,getNumbersHandler);
				two_position.addEventListener(klsf_NumberSelector_DaXiaoDanShuang.NUMBER_CLICK,getNumbersHandler);
				three_position.addEventListener(klsf_NumberSelector_DaXiaoDanShuang.NUMBER_CLICK,getNumbersHandler);
				four_position.addEventListener(klsf_NumberSelector_DaXiaoDanShuang.NUMBER_CLICK,getNumbersHandler);
				five_position.addEventListener(klsf_NumberSelector_DaXiaoDanShuang.NUMBER_CLICK,getNumbersHandler);
				six_position.addEventListener(klsf_NumberSelector_DaXiaoDanShuang.NUMBER_CLICK,getNumbersHandler);
				seven_position.addEventListener(klsf_NumberSelector_DaXiaoDanShuang.NUMBER_CLICK,getNumbersHandler);
				eight_position.addEventListener(klsf_NumberSelector_DaXiaoDanShuang.NUMBER_CLICK,getNumbersHandler);
			}
			/**
			 * 监听选号 
			 */
			protected function getNumbersHandler(event:CustomEvent):void
			{
				var target:klsf_NumberSelector_DaXiaoDanShuang = event.currentTarget as klsf_NumberSelector_DaXiaoDanShuang;
				switch(target)
				{
					case one_position:
						oneArray = event.body as Array;
						dispatchEvent(new CustomEvent(GET_ONE_NUMBERS,oneArray));
						break;
					case two_position:
						twoArray = event.body as Array;
						dispatchEvent(new CustomEvent(GET_TWO_NUMBERS,twoArray));
						break;
					case three_position:
						threeArray = event.body as Array;
						dispatchEvent(new CustomEvent(GET_THREE_NUMBERS,threeArray));
						break;
					case four_position:
						fourArray = event.body as Array;
						dispatchEvent(new CustomEvent(GET_FOUR_NUMBERS,fourArray));
						break;
					case five_position:
						fiveArray = event.body as Array;
						dispatchEvent(new CustomEvent(GET_FIVE_NUMBERS,fiveArray));
						break;
					case six_position:
						sixArray = event.body as Array;
						dispatchEvent(new CustomEvent(GET_SIX_NUMBERS,sixArray));
						break;
					case seven_position:
						sevenArray = event.body as Array;
						dispatchEvent(new CustomEvent(GET_SEVEN_NUMBERS,sevenArray));
						break;
					case eight_position:
						eightArray = event.body as Array;
						dispatchEvent(new CustomEvent(GET_EIGHT_NUMBERS,eightArray));
						break;
					default:
						break;
				}
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<fx:Metadata>
		[ResourceBundle("LotteryTips")]
	</fx:Metadata>
	<klsf:klsf_NumberSelector_DaXiaoDanShuang id="one_position" width="100%" weiShu="第一位"/>
	<klsf:klsf_NumberSelector_DaXiaoDanShuang id="two_position" width="100%" weiShu="第二位"/>
	<klsf:klsf_NumberSelector_DaXiaoDanShuang id="three_position" width="100%" weiShu="第三位"/>
	<klsf:klsf_NumberSelector_DaXiaoDanShuang id="four_position" width="100%" weiShu="第四位"/>
	<klsf:klsf_NumberSelector_DaXiaoDanShuang id="five_position" width="100%" weiShu="第五位"/>
	<klsf:klsf_NumberSelector_DaXiaoDanShuang id="six_position" width="100%" weiShu="第六位"/>
	<klsf:klsf_NumberSelector_DaXiaoDanShuang id="seven_position" width="100%" weiShu="第七位"/>
	<klsf:klsf_NumberSelector_DaXiaoDanShuang id="eight_position" width="100%" weiShu="第八位"/>
</s:VGroup>
