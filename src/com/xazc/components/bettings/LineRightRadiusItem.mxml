<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:Rect x="0" y="0" width="{this.width-10}" height="100%">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0x1e313d" ratio="0.2"/>
				<s:GradientEntry color="0x434c56" ratio="0.4"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	<s:Path data="M 10 10 C10 10 10 0 0 0" x="{this.width-17}">
		<s:stroke>
			<s:LinearGradientStroke rotation="90">
				<s:GradientEntry color="0x1e313d" ratio="0.2"/>
				<s:GradientEntry color="0x434c56" ratio="0.1"/>
			</s:LinearGradientStroke>
		</s:stroke>
	</s:Path>
</s:Group>
